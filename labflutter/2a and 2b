import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text("Flutter Widgets")),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Text(
                "This is a Text Widget",
                style: TextStyle(fontSize: 22, color: Colors.blue),
              ),

              SizedBox(height: 20),

              Container(
                padding: EdgeInsets.all(20),
                color: Colors.green,
                child: Text(
                  "Inside Container",
                  style: TextStyle(color: Colors.white, fontSize: 18),
                ),
              ),

              SizedBox(height: 20),

              Image.network(
                'https://picsum.photos/200',
                height: 150,
                width: 150,
              ),
            ],
          ),
        ),
      ),
    );
  }
}
2b.db
import 'package:flutter/material.dart';

void main() {
  runApp(MyLayouts());
}

class MyLayouts extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text("Row, Column & Stack")),
        body: Column(
         
          children: [
            
            // Row Example
            Row(
              mainAxisAlignment: MainAxisAlignment.spaceEvenly,
              children: [
                Container(width: 50, height: 50, color: Colors.red),
                Container(width: 50, height: 50, color: Colors.green),
                Container(width: 50, height: 50, color: Colors.blue),
              ],
            ),

            SizedBox(height: 20),

            // Column Example
            Column(
              children: [
                Container(width: 100, height: 40, color: Colors.orange),
                SizedBox(height: 10),
                Container(width: 100, height: 40, color: Colors.purple),
              ],
            ),

            SizedBox(height: 20),

            // Stack Example
            Center(
              child: Stack(
                alignment: Alignment.center,
                children: [
                  Container(width: 150, height: 150, color: Colors.grey),
                  Container(width: 100, height: 100, color: Colors.black),
                  Text('stack',style:TextStyle(color:Colors.white))
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }
}
