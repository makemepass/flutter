import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text("Row, Column, Stack Example"),
          centerTitle: true,
        ),

        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [

              // COLUMN WIDGET
              Column(
                children: [
                  Text("Column Layout"),
                  SizedBox(height: 10),
                  Container(height: 40, width: 40, color: Colors.red),
                  Container(height: 40, width: 40, color: Colors.green),
                  Container(height: 40, width: 40, color: Colors.blue),
                ],
              ),

              SizedBox(height: 30),

              // ROW WIDGET
              Row(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  Text("Row Layout   "),
                  Container(height: 40, width: 40, color: Colors.orange),
                  Container(height: 40, width: 40, color: Colors.purple),
                  Container(height: 40, width: 40, color: Colors.teal),
                ],
              ),

              SizedBox(height: 30),

              // STACK WIDGET
              Stack(
                alignment: Alignment.center,
                children: [
                  Container(
                    height: 120,
                    width: 120,
                    color: Colors.grey[300],
                  ),
                  Container(
                    height: 80,
                    width: 80,
                    color: Colors.blue,
                  ),
                  Container(
                    height: 40,
                    width: 40,
                    color: Colors.red,
                  ),
                ],
              ),
            ],
          ),
        ),
      ),
    );
  }
}
